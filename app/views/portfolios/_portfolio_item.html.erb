<div class="col-md-4">
  <div class="card mb-4 shadow-sm"  data-id="<%= portfolio_item.id %>">
    <div width="100%" height="225" background="#55595c" color="#eceeef" class="card-img-top" text="Thumbnail">
      <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %>
    </div>
    <div class="card-body">
      <p class="card-text">
        <span>
          <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %>
          <%= portfolio_item.subtitle %>
        </span>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
