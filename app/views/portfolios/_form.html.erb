<%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload main image <%= form.file_field :main_image, class: 'form-control', style:'display:none' %>
        </label>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload thumb image <%= form.file_field :thumb_image, class: 'form-control', style:'display:none' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows:14 %>
      </div>
    </div>
  </div>
  <hr />
  <h3>Technologies used:</h3>
  <%= form.fields_for :technologies do |technology_form| %>
    <div class="form-group">
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name, class: 'form-control' %>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
